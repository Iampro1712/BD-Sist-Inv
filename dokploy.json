{
  "name": "inventrix",
  "description": "Sistema de gesti√≥n de inventario",
  "services": {
    "backend": {
      "type": "application",
      "dockerfile": "backend/Dockerfile",
      "port": 8000,
      "healthcheck": "/api/",
      "env": [
        "DEBUG",
        "SECRET_KEY",
        "DB_NAME",
        "DB_USER",
        "DB_PASSWORD",
        "DB_HOST",
        "DB_PORT",
        "ALLOWED_HOSTS",
        "CORS_ALLOWED_ORIGINS"
      ]
    },
    "frontend": {
      "type": "application",
      "dockerfile": "frontend/Dockerfile.prod",
      "port": 80,
      "healthcheck": "/health",
      "env": [
        "VITE_API_URL"
      ]
    },
    "database": {
      "type": "postgres",
      "version": "15",
      "env": [
        "POSTGRES_DB",
        "POSTGRES_USER",
        "POSTGRES_PASSWORD"
      ]
    }
  }
}
